<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbuking"
    tools:context=".confirm_book"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textFutsal"
            android:layout_alignParentRight="true"
            android:textSize="28sp"
            android:textColor="#ffffff"
            android:text="Futsal Kuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_marginTop="180dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="18dp"
        app:cardBackgroundColor="#4CC12F"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="center"
                android:text="Period"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginTop="2dp"
                android:background="@drawable/bg_view"
                android:layout_gravity="center"
                android:layout_width="280dp"
                android:layout_height="4dp"/>

            <TextView
                android:id="@+id/setnama"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Nama"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/settanggal"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Tanggal"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/setjam"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Jam"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/setperiod"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:text="Period"
                android:textSize="24sp"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnFinish"
                android:layout_gravity="end"
                android:layout_marginTop="12dp"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:stateListAnimator="@null"
                android:text="Next"
                android:textColor="#4cc12f"
                android:background="@drawable/bg_button"
                android:layout_width="wrap_content"
                android:layout_height="36dp"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>