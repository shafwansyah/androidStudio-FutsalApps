<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgbuking"
    tools:context=".Main2Activity">

        <RelativeLayout
        android:layout_marginTop="32dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textFutsal"
                android:layout_alignParentRight="true"
                android:textSize="28sp"
                android:textColor="#ffffff"
                android:text="Futsal Kuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_marginTop="220dp"
            android:layout_marginRight="22dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="18dp"
            app:cardBackgroundColor="#4CC12F"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <GridLayout
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textDate"
                    android:gravity="center_vertical"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Choose Date"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnDate"
                    android:layout_rowWeight="1"
                    android:background="@drawable/date"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />

                <TextView
                    android:id="@+id/textTime"
                    android:gravity="center_vertical"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:text="Choose Time"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnTime"
                    android:layout_rowWeight="1"
                    android:background="@drawable/time"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    />

            </GridLayout>

                <TextView
                    android:layout_gravity="center"
                    android:text="Period"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/rgPeriod"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnSatu"
                        android:layout_weight="1"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/bg_button"
                        android:text="One"
                        android:textColor="#4CC12F"
                        android:onClick="onRadioButtonClicked"
                        android:layout_width="0dp"
                        android:layout_height="28dp"/>
                    <Button
                        android:id="@+id/btnDua"
                        android:layout_weight="1"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/bg_button"
                        android:onClick="onRadioButtonClicked"
                        android:text="Two"
                        android:textColor="#4CC12F"
                        android:layout_width="0dp"
                        android:layout_height="28dp"/>
                    <Button
                        android:id="@+id/btnTiga"
                        android:layout_weight="1"
                        android:onClick="onRadioButtonClicked"
                        android:background="@drawable/bg_button"
                        android:text="three"
                        android:textColor="#4CC12F"
                        android:layout_width="0dp"
                        android:layout_height="28dp"/>
                    </RadioGroup>

                </LinearLayout>

                <EditText
                    android:id="@+id/textName"
                    android:background="@null"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:inputType="textCapCharacters"
                    android:hint="Your Name"
                    android:textColorHint="#ffffff"
                    android:textColor="#ffffff"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_gravity="end"
                    android:layout_marginTop="12dp"
                    android:elevation="2dp"
                    android:translationZ="2dp"
                    android:stateListAnimator="@null"
                    android:text="Next"
                    android:textColor="#4CC12F"
                    android:background="@drawable/bg_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>